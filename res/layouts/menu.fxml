<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.GridPane?>
<?import java.net.URL?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Text?>

<GridPane xmlns="http://javafx.com/javafx/8" 
          xmlns:fx="http://javafx.com/fxml/1"
          fx:id="frontPage"
          id="root">
    <columnConstraints>
        <ColumnConstraints percentWidth="5"></ColumnConstraints>
        <ColumnConstraints percentWidth="25"></ColumnConstraints>
        <ColumnConstraints percentWidth="40"></ColumnConstraints>
        <ColumnConstraints percentWidth="25"></ColumnConstraints>
        <ColumnConstraints percentWidth="5"></ColumnConstraints>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints percentHeight="6"></RowConstraints>
        <RowConstraints percentHeight="15"></RowConstraints>
        <RowConstraints percentHeight="15"></RowConstraints>
        <RowConstraints percentHeight="1.5"></RowConstraints>
        <RowConstraints percentHeight="14"></RowConstraints>
        <RowConstraints percentHeight="1.5"></RowConstraints>
        <RowConstraints percentHeight="14"></RowConstraints>
        <RowConstraints percentHeight="1.5"></RowConstraints>
        <RowConstraints percentHeight="14"></RowConstraints>
        <RowConstraints percentHeight="1.5"></RowConstraints>
        <RowConstraints percentHeight="14"></RowConstraints>
        <RowConstraints percentHeight="6"></RowConstraints>
    </rowConstraints>
    <Text styleClass="titlePieces"
          GridPane.columnIndex="1"
          GridPane.halignment="CENTER"
          GridPane.rowIndex="1"
          GridPane.valignment="CENTER"
          GridPane.columnSpan="3">
        Jumping Raccoon
    </Text>
    <Text styleClass="titlePieces"
          GridPane.columnIndex="1"
          GridPane.halignment="CENTER"
          GridPane.rowIndex="2"
          GridPane.valignment="CENTER"
          GridPane.columnSpan="3">
        Adventures
    </Text>
    <Button fx:id="startButton"
            styleClass="buttons"
            GridPane.columnIndex="2"
            GridPane.halignment="CENTER"
            GridPane.rowIndex="4"
            GridPane.valignment="CENTER">
        Start Game
    </Button>
    <Button fx:id="savesButton"
            styleClass="buttons"
            GridPane.columnIndex="2"
            GridPane.halignment="CENTER"
            GridPane.rowIndex="6"
            GridPane.valignment="CENTER">
        Load Game
    </Button>
    <Button fx:id="settingsButton"
            styleClass="buttons"
            GridPane.columnIndex="2"
            GridPane.halignment="CENTER"
            GridPane.rowIndex="8"
            GridPane.valignment="CENTER">
        Settings
    </Button>
    <Button fx:id="quitButton"
            styleClass="buttons"
            GridPane.columnIndex="2"
            GridPane.halignment="CENTER"
            GridPane.rowIndex="10"
            GridPane.valignment="CENTER">
        Quit
    </Button>
    <stylesheets>
      <URL value="@menu.css" />
      <URL value="@background.css" />
      <URL value="@buttons.css" />
   </stylesheets>
</GridPane>
