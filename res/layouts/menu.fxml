<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import java.net.URL?>
<?import javafx.scene.control.Label?>

<BorderPane xmlns="http://javafx.com/javafx/8" 
            xmlns:fx="http://javafx.com/fxml/1"
            fx:id="frontPage"
            id="root">
    <top>
        <Label id="title"
              BorderPane.alignment="CENTER"
              text="Jumping Raccoon Adventures">
        </Label>
    </top>
    <center>
        <VBox id="buttonList"
              BorderPane.alignment="CENTER"
              alignment="CENTER">
                <Button fx:id="startButton"
                        styleClass="buttons">Start Game</Button>
                <Button fx:id="savesButton"
                        styleClass="buttons">Load Game</Button>
                <Button fx:id="settingsButton"
                        styleClass="buttons">Settings</Button>
                <Button fx:id="quitButton"
                        styleClass="buttons">Quit</Button>          
        </VBox>
    </center>
    <stylesheets>
      <URL value="@menu.css" />
      <URL value="@background.css" />
      <URL value="@buttons.css" />
   </stylesheets>
</BorderPane>
